<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- jquery CDN -->
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <!-- googlrFont -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <!-- css -->
    <link rel="stylesheet" href="/static/css/users.css" />
    <title>회원 정보</title>
  </head>
  <body>
    <header>
      <a href="#" onClick="history.back()" class="mobile">
        <img src="/static/img/Arrow - Left.png" alt="arrow" />
      </a>
      <p class="logo mobile">내정보</p>
      <!-- 웹 -->
      <a href="/" class="web logoA">
        <img src="/static/img/logo2.png" alt="logo" class="logoImg" />
        <span>오늘은 뭐 먹지?</span>
      </a>
      <!-- / 수정!!!!!!!!!!!!! -->
      <div class="menu web">
        <!-- 로그인시  변경 herf 수정!!!!!! -->
        <% if(!true){ %>
        <a href="/users">내정보</a>
        <a href="/users/logout">로그아웃</a>
        <%}else{%>
        <a href="/users/login">로그인</a>
        <a href="/users/register">회원가입</a>
        <%} %>
      </div>
    </header>
    <main>
      <div class="con">
        <div class="userBox">
          <!-- 프로필 박스1 -->
          <div class="userBox1">
            <!-- 프로필사진 이름 -->
            <div class="userPic">
              <img src="/static/img/pro.png" alt="profileimage" />
            </div>
            <div class="userP">
              <!-- 아래  =user.userId , name으로 -->
              <p class="userId">userId</p>
              <p class="userName">name</p>
            </div>
          </div>

          <!-- 프로필박스2 -->
          <div class="userBox2">
            <div class="box2">
              <span>정보수정</span>
              <a href="/users/eidt">
                <img
                  src="/static/img/arrow_right2.png"
                  alt="정보수정"
                  class="box2img"
                />
              </a>
            </div>
            <div class="box2">
              <span>즐겨찾기</span>
              <a href="/favorites">
                <img
                  src="/static/img/arrow_right2.png"
                  alt="즐겨찾기"
                  class="box2img"
                />
              </a>
            </div>
            <div class="box2">
              <span>로그아웃</span>
              <a href="/users/logout">
                <img
                  src="/static/img/arrow_right2.png"
                  alt="로그아웃"
                  class="box2img"
                />
              </a>
            </div>
            <div class="box2">
              <span>회원탈퇴</span>
              <!-- 탈퇴는 온 클릭-->
              <img
                src="/static/img/arrow_right2.png"
                alt="회원탈퇴"
                class="box2img"
                onclick="confirmClick()"
              />
            </div>
          </div>
        </div>
      </div>
    </main>
    <div class="mManu">
      <div class="Menu">
        <div class="menu">
          <a href="/">
            <img src="/static/img/Home.png" alt="홈" />
          </a>
        </div>

        <div class="menu">
          <a href="/favorites">
            <img src="/static/img/Heart.png" alt="즐겨찾기" />
          </a>
        </div>

        <div class="menu">
          <a href="/users">
            <img src="/static/img/Heart.png" alt="즐겨찾기" />
          </a>
        </div>
      </div>
    </div>

    <footer class="web">
      <p>Copyright 2024. Team 2TheCode All rights reserved.</p>
    </footer>
  </body>
  <script>
    //토큰 받기
    // /알람창
    function confirmClick() {
      if (confirm("회원을 탈퇴하시겠습니까?") == true) {
        document.location.href = "/";
      } // 수정
    }
  </script>
</html>
